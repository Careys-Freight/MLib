    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Dialog="clr-namespace:MWindowDialogLib.Dialogs;assembly=MWindowDialogLib"
    xmlns:MWindow="clr-namespace:MWindowLib;assembly=MWindowLib"
    xmlns:ThemeBehav="clr-namespace:MLib.Behaviors;assembly=MLib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:democonv="clr-namespace:MDemo.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reskeys="clr-namespace:MLib.Themes;assembly=MLib"
    Name="SamplesMainWindow"
    Title="MainWindow"
    Width="825"
    Height="750"
    MinWidth="425"
    MinHeight="150"
    Dialog:DialogParticipation.Register="{Binding Demo}"
    Icon="{DynamicResource logo64}"
    mc:Ignorable="d">
    <!--  DialogParticipation is required if DIALOG COORDINATOR is used!  -->
    <MWindow:MetroWindow.InputBindings>
        <KeyBinding
            Key="I"
            Command="{Binding Demo.ShowInputDialogCommand}"
            Modifiers="Ctrl" />
        <KeyBinding
            Key="L"
            Command="{Binding Demo.ShowLoginDialogCommand}"
            Modifiers="Ctrl" />
    </MWindow:MetroWindow.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="16" /> <!-- Reserve space for ResizeGrip -->
        </Grid.RowDefinitions>

        <ScrollViewer>
