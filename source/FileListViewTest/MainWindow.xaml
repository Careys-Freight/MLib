<Window x:Class="FileListViewTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

        xmlns:localview="clr-namespace:FileListViewTest"

        Title="MainWindow" Height="650" Width="800">
    <Grid>

    <TabControl>
      <TabItem Header="Test WITHOUT Folder Browser" DataContext="{Binding FolderView}">
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition />
          </Grid.ColumnDefinitions>

          <localview:FileListItemView Grid.Column="0" />

          <GridSplitter HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1"/>

          <localview:FileListItemOptionsView
             Grid.Column="2" Margin="5" HorizontalAlignment="Stretch" />
        </Grid>
      </TabItem>
    </TabControl>
  </Grid>
</Window>
