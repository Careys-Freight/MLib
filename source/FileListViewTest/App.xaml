<Application x:Class="FileListViewTest.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml"
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="/FolderBrowser;component/Images/GenericIcons.xaml" />
                <ResourceDictionary Source="/FileListView;component/Images/GenericIcons.xaml" />

            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="HyperlinkForeground" Color="Black" />
            <SolidColorBrush x:Key="HyperlinkForegroundDisabled" Color="Gray" />
        </ResourceDictionary>

    </Application.Resources>
</Application>
